{# templates/language/_form.html.twig #}
{{ form_start(form, {'attr': {'class': 'space-y-4'}}) }}
<div>
    {{ form_label(form.nom, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.nom, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
    {{ form_errors(form.nom) }}
</div>
<div>
    {{ form_label(form.code, null, {'attr': {'class': 'block text-sm font-medium text-gray-700'}}) }}
    {{ form_widget(form.code, {'attr': {'class': 'mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring-blue-500 focus:border-blue-500'}}) }}
    {{ form_errors(form.code) }}
</div>
<button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded hover:bg-blue-600">{{ button_label|default('Save') }}</button>
{{ form_end(form) }}
