<form method="post" action="{{ path('app_language_delete', {'id': language.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="mt-4">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ language.id) }}">
    <button type="submit" class="bg-red-500 text-white py-2 px-4 rounded hover:bg-red-600">Delete</button>
</form>
